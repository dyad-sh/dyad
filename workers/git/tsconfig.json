{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
  "include": ["*.ts", "../../shared/git_worker_types.ts"],
  "exclude": ["node_modules", "dist"]
}
